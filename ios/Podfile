platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Configurazione progetto
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Controllo esistenza file Flutter
flutter_generated_file = File.join('..', 'Flutter', 'Generated.xcconfig')
unless File.exist?(flutter_generated_file)
  raise "#{flutter_generated_file} must exist. Run 'flutter pub get' first"
end

# Carica helper Flutter
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), File.dirname(flutter_generated_file)

flutter_ios_podfile_setup

target 'Runner' do
  # Configurazione framework (statico per performance, dinamico se necessario)
  use_frameworks! :linkage => :static
  
  # Installa tutti i plugin Flutter
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
  
end

# Post-install
post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Impostazioni base Flutter
    flutter_additional_ios_build_settings(target)
    
    # Configurazioni specifiche per target
    target.build_configurations.each do |config|
      # Obbligatorio per Xcode 15+
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # Disabilita firma codice per CI
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      
      # Workaround per plugin
      config.build_settings['APPLICATION_EXTENSION_API_ONLY'] = 'NO'
      
      # Disabilita Bitcode (obbligatorio per Flutter)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Risolve problemi di privacy bundle
      if target.name.include?('_privacy') || target.name == 'webview_flutter_wkwebview'
        config.build_settings['GENERATE_INFOPLIST_FILE'] = 'YES'
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
      
      # Ottimizzazioni architettura
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
  
  # Workaround per CocoaPods 1.11+
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
  end
end
