platform :ios, '17.0'

# Usa dynamic frameworks, richiesto da molti pod recenti
use_frameworks! :linkage => :dynamic

# Prova a caricare podhelper dal Flutter locale o globale
flutter_root = ENV['FLUTTER_ROOT'] || File.expand_path('..', File.dirname(`which flutter`))
podhelper_path = File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
if File.exist?(podhelper_path)
  load podhelper_path
else
  # Fallback per build locali (puoi aggiungere qui eventuali workaround)
  puts 'Warning: podhelper.rb not found! Controlla la tua installazione Flutter.'
end

target 'Runner' do
  # Installazione di tutti i pod necessari al progetto Flutter
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__))) if defined?(flutter_install_all_ios_pods)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Abilita build settings di Flutter (debug/release ecc.)
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)
    # Fix per Xcode 15/16: elimina arm64 dai simulator se serve (opzionale)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
