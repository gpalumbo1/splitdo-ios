platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :dynamic
  use_modular_headers!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Fix specifico per webview_flutter_wkwebview
    if target.name == 'webview_flutter_wkwebview'
      target.build_configurations.each do |config|
        # Genera automaticamente i file di privacy
        config.build_settings['GENERATE_INFOPLIST_FILE'] = 'YES'
        config.build_settings['INFOPLIST_FILE'] = 'Target Support Files/webview_flutter_wkwebview/Info.plist'
        
        # Crea la struttura delle cartelle necessaria
        system("mkdir -p ${PODS_ROOT}/../webview_flutter_wkwebview")
        system("mkdir -p ${PODS_ROOT}/Target Support Files/webview_flutter_wkwebview")
      end
    end
    
    # Configurazioni generali
    target.build_configurations.each do |config|
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Workaround per Xcode 16
      config.build_settings['APPLICATION_EXTENSION_API_ONLY'] = 'NO'
    end
  end
end
