platform :ios, '13.0'

# Disabilita analytics di CocoaPods per la CI
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_installation
  flutter_application_path = '../'
  load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')
end

target 'Runner' do
  flutter_installation
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Abilita i build settings di Flutter (debug/release, ecc.)
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)
    
    # Fix per Xcode 15/16 su Apple Silicon (evita errori di architettura simulatore)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
